---
interface Props {
  post: {
    slug: string;
    data: {
      title: string;
      description: string;
    };
  };
}

const { post } = Astro.props;
---

<li>
  <a href={`/blog/${post.slug}/`} class="block group p-4 bg-[#F5F5F5] dark:bg-stone-800 rounded-xl hover:bg-[#EBEBEB] dark:hover:bg-stone-700 transition-colors">
    <div class="flex flex-col gap-1">
      <div class="font-grotesk font-normal text-base text-black dark:text-white group-hover:opacity-80 transition-opacity">
        {post.data.title}
      </div>
      <div class="font-grotesk font-normal text-base text-black/44 dark:text-white/44">
        {post.data.description}
      </div>
    </div>
  </a>
</li> 