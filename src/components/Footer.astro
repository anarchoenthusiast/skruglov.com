---
import Container from "@components/Container.astro";
import { SITE } from "@consts";
import Logo from "@components/Logo.astro";
import Link from "@components/Link.astro";

interface Props {
  pageType?: 'default' | 'blog' | 'project';
}

const { pageType = 'default' } = Astro.props;

const currentYear = new Date().getFullYear();
---

<footer class="animate pt-0 pb-12">
  <Container size={pageType}>
    <div class="flex flex-col gap-13 h-full border-t border-black/10 dark:border-white/10 pt-6">
      <!-- Верхняя часть футера -->
      <div class="flex flex-col md:flex-row justify-between gap-8">
        <!-- Левая колонка с логотипом и текстом -->
        <div class="flex flex-col gap-1">
          <a href="/" class="hover:opacity-80 transition-opacity inline-block cursor-pointer">
            <Logo />
            <div class="mt-1 text-black dark:text-white text-base">
              <div>Sergey Kruglov</div>
            </div>
          </a>
        </div>
        
        <!-- Правая колонка с навигацией, прижатая к низу -->
        <div class="flex gap-4 md:gap-16 md:self-end">
          <!-- Первая группа ссылок -->
          <div class="flex flex-col gap-1">
            <a href="/projects" class="text-black dark:text-white text-base hover:opacity-80 transition-opacity cursor-pointer">Projects</a>
            <a href="/blog" class="text-black dark:text-white text-base hover:opacity-80 transition-opacity cursor-pointer">Blog</a>
          </div>
          
          <!-- Вторая группа ссылок -->
          <div class="flex flex-col gap-1">
            <a href="/about" class="text-black dark:text-white text-base hover:opacity-80 transition-opacity cursor-pointer">About</a>
            <a href="/colophon" class="text-black dark:text-white text-base hover:opacity-80 transition-opacity cursor-pointer">Colophon</a>
          </div>
        </div>
      </div>
      
      <!-- Нижняя часть футера -->
      <div class="flex flex-col md:flex-row justify-between gap-4 text-black/50 dark:text-white/50 text-base">
        <div>&copy; {currentYear}</div>
        <div class="flex gap-4">
          <a href="/rss.xml" class="hover:opacity-80 transition-opacity cursor-pointer">RSS</a>
          <a href="https://linkedin.com/in/skruglov" target="_blank" rel="noopener noreferrer" class="hover:opacity-80 transition-opacity cursor-pointer">LinkedIn</a>
          <a href="https://twitter.com/kruglvse" target="_blank" rel="noopener noreferrer" class="hover:opacity-80 transition-opacity cursor-pointer">Twitter</a>
        </div>
      </div>
    </div>
  </Container>
</footer>

<style>
  .gap-13 {
    gap: 3.25rem;
  }
</style>
