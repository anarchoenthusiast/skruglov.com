---
import Container from "@components/Container.astro";
import { SITE } from "@consts";
import Logo from "@components/Logo.astro";
import Link from "@components/Link.astro";

interface Props {
  pageType?: 'default' | 'blog' | 'project';
}

const { pageType = 'default' } = Astro.props;

const currentYear = new Date().getFullYear();
---

<footer class="animate pt-0 pb-24">
  <Container size={pageType}>
    <div class="flex flex-col gap-4 h-full border-t border-black/10 dark:border-white/10 pt-6">
      <!-- Верхняя строка: логотип + навигация -->
      <div class="flex justify-between items-end">
        <!-- Левая часть: логотип и имя -->
        <div class="flex-1 flex flex-col gap-1">
          <a href="/" class="hover:opacity-80 transition-opacity inline-block cursor-pointer w-6 h-6">
            <Logo />
          </a>
          <div class="text-black dark:text-white text-base leading-6">
            Sergey Kruglov
          </div>
        </div>
        
        <!-- Правая часть: навигационные ссылки -->
        <div class="flex-1 flex gap-4">
          <!-- Первая колонка -->
          <div class="flex flex-col justify-end flex-1">
            <a href="/projects" class="text-black dark:text-white text-base leading-6 hover:opacity-80 transition-opacity cursor-pointer">Projects</a>
            <a href="/blog" class="text-black dark:text-white text-base leading-6 hover:opacity-80 transition-opacity cursor-pointer">Blog</a>
          </div>
          
          <!-- Вторая колонка -->
          <div class="flex flex-col justify-center flex-1">
            <a href="/about" class="text-black dark:text-white text-base leading-6 hover:opacity-80 transition-opacity cursor-pointer">About</a>
            <a href="/colophon" class="text-black dark:text-white text-base leading-6 hover:opacity-80 transition-opacity cursor-pointer">Colophon</a>
          </div>
        </div>
      </div>
      
      <!-- Нижняя строка: копирайт и ссылки -->
      <div class="flex justify-between items-start">
        <!-- Левая часть: копирайт -->
        <div class="flex-1 flex items-center">
          <div class="text-black/44 dark:text-white/44 text-base leading-6">
            &copy; {currentYear}
          </div>
        </div>
        
        <!-- Правая часть: соцсети -->
        <div class="flex-1 flex items-center">
          <div class="text-black/44 dark:text-white/44 text-base leading-6 break-words">
            <a href="/rss.xml" class="link-underlined" target="_blank" rel="noopener noreferrer">RSS</a>, <a href="https://www.linkedin.com/in/kruglovse/" class="link-underlined" target="_blank" rel="noopener noreferrer">LinkedIn</a>, <a href="https://www.are.na/sergey-kruglov/channels" class="link-underlined" target="_blank" rel="noopener noreferrer">Are.na</a> and <a href="/about#contact" class="link-underlined">other options</a>
          </div>
        </div>
      </div>
    </div>
  </Container>
</footer>

